{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [
      "arcgis-js-api"
    ],
    "paths": {
      "@services/*": ["src/app/services/*"],
      "@components/*": ["src/app/components/*"],
      "@environments/*": ["src/environments/*"]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "node_modules/arcgis-js-api/index.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
